<form class="form-horizontal" id="form-filter">
    <div class="form-group">
        <label for="titleProductionFilter" class="col-lg-12 control-label">{{titleProduction}}</label>
        <div class="col-lg-12">
            <select class="form-control" name="name-filter" id="titleProductionFilter">
                {{#if titles}}
                    {{#each titles}}
                        <option data-item="{{@index}}">{{this}}</option>
                    {{/each}}
                {{else}}
                    <option> - Не найдено - </option>
                {{/if}}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="dateNumberFilter" class="col-lg-12 control-label">Номер/Дата</label>
        <div class="col-lg-12">
            <input class="form-control" type="text" id="dateNumberFilter">
        </div>
    </div>
    <div class="form-group">
        <label for="articleTitleFilter" class="col-lg-12 control-label">Название статьи</label>
        <div class="col-lg-12">
            <input class="form-control" type="text" id="articleTitleFilter">
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12 text-right">
            <button class="btn btn-primary" type="submit">
                <span class="spinner-border spinner-border-sm" hidden role="status" aria-hidden="true"></span>
                Найти
            </button>
        </div>
    </div>
</form>