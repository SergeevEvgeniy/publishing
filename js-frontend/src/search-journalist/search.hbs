<form id="{{componentId}}">
    <div class="row">
        <div class="col-sm-12">
            <h4 class="form-title">Поиск журналистов</h4>
        </div>
        <div class="col-sm-6">
            <div class="row input-block">
                <label class="col-sm-4 text-right font-weight-bold">Издание:</label>
                <div class="col-sm-8">
                    <select name="publishing" class="form-control">
                        <option disabled selected>Выберите издание</option>
                        {{#each publishing.elementList}}
                            {{#if selected}}
                                <option  selected value={{id}}>{{name}}</option>
                            {{else}}
                                <option value={{id}}>{{name}}</option>
                            {{/if}}
                        {{/each}}
                    </select>
                </div>
            </div>
            {{#if issue.isIssuesAdded}}
            <div class="row input-block">
                <label class="col-sm-4 text-right font-weight-bold">Выпуск:</label>
                <div class="col-sm-8" id="issue">
                    <select name="issue" class="form-control">
                        <option disabled selected>Выбирите выпуск</option>
                        {{#each issue.elementList}}
                            {{#if selected}}
                                <option  selected value={{id}}>{{name}}</option>
                            {{else}}
                                <option value={{id}}>{{name}}</option>
                            {{/if}}
                        {{/each}}
                    </select>
                </div>
            </div>
            {{/if}}
            <div class="row input-block">
                <label class="col-sm-4 text-right font-weight-bold">Фамилия:</label>
                <div class="col-sm-8">
                    <input pattern="^[А-Яа-яЁё$0-9\sA-z]+$" name="lastName" class="form-control" type="text" id="lastName"
                        value="{{lastName}}"
                        data-message="Поле фамилия не может содержать латинских символов, спец и цифр."
                        placeholder="Введите фамилию или её часть">
                </div>
            </div>
        </div>
        <div class="col-sm-6" id="topicBlock">
            <div class="row input-block">
                <label class="col-sm-4 text-right font-weight-bold">Рубрика:</label>
                <div class="col-sm-8" id="topic">
                    <select name="topic" class="form-control">
                        <option disabled selected>Выберите рубрику</option>
                        {{#each topic.elementList}}
                            {{#if selected}}
                                <option  selected value={{id}}>{{name}}</option>
                            {{else}}
                                <option value={{id}}>{{name}}</option>
                            {{/if}}
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="row input-block">
                <label class="col-sm-4 text-right font-weight-bold">Название статьи:</label>
                <div class="col-sm-8">
                    <input pattern="^[А-Яа-яЁё$0-9\sA-z]+$" name="article" class="form-control" id="article" type="text"
                    value="{{article}}"
                        data-message="Поле название статьи не может содержать латинских символов и спец символов кроме символа '$'."
                        placeholder="Введите название статьи или её часть">
                </div>
            </div>
        </div>
        <div class="col-sm-12 text-right submit-area">
            {{#if isLoading}}
            <div class="spinner-border text-primary align-middle" role="status">
                <span class="sr-only">Loading...</span>
            </div>
            {{/if}}
            {{#if isSubmitButtonActive}}
            <button type="submit" class="btn btn-primary" id="searchJournalist">
                <i class="fas fa-search"></i>
                Найти
            </button>
            {{else}}
            <button type="submit" class="btn btn-primary disabled" id="searchJournalist">
                <i class="fas fa-search"></i>
                Найти
            </button>
            {{/if}}
            <button type="button" class="btn btn-primary" id="clearJournalistSearch">Очистить</button>
        </div>
    </div>
</form>
<div id="searchResult">
</div>
