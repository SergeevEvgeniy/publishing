<form class="form-horizontal" id="form-filter">
    <h4 class="form-title">Поиск журналов</h4>
    <div class="form-group">
        <label for="titlePublication" class="col-lg-12 control-label">{{typePublication}}</label>
        <div class="col-lg-12">
            <select class="form-control" name="titlePublication" id="titlePublication">
                {{#with inputs}}
                    {{#each publicationsTitles}}
                            {{#if_eq this.title '123'}}
                                <option selected data-item="{{this.id}}">{{this.title}}</option>
                            {{else}}
                                <option data-item="{{this.id}}">{{this.title}}</option>
                            {{/if_eq}}
                    {{else}}
                        <option> - Не найдено - </option>
                    {{/each}}
                {{/with}}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="dateNumber" class="col-lg-12 control-label">Номер/Дата</label>
        <div class="col-lg-12">
            <input class="form-control" value="{{inputs.dateNumber}}" name="dateNumber" type="text" id="dateNumber">
        </div>
    </div>
    <div class="form-group">
        <label for="articleTitle" class="col-lg-12 control-label">Название статьи</label>
        <div class="col-lg-12">
            <input class="form-control" value="{{inputs.articleTitle}}" name="articleTitle" type="text" id="articleTitle">
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12 text-right">
            <button type="submit" class="btn btn-primary btn-find">
                <i class="fas fa-search"></i>
                <span class="spinner spinner-border spinner-border-sm" hidden role="status" aria-hidden="true"></span>
                Найти
            </button>
            <button type="button" class="btn btn-primary btn-clear">Очистить</button>
        </div>
    </div>
</form>