<form class="form-horizontal" id="form-filter">
    <div class="form-group">
        <label for="titlePublicationFilter" class="col-lg-12 control-label">{{typePublication}}</label>
        <div class="col-lg-12">
            <select class="form-control" name="name-filter" id="publicationTitleFilter">

                {{#with inputs}}
                    {{#each publicationsTitles}}
                            {{#if_eq this.title '123'}}
                                <option selected data-item="{{this.id}}">{{this.title}}</option>
                            {{else}}
                                <option data-item="{{this.id}}">{{this.title}}</option>
                            {{/if_eq}}
                    {{else}}
                        <option> - Не найдено - </option>
                    {{/each}}
                {{/with}}
            </select>
            {{inputs.publicationTitle}}<br />
            {{isSubmiting}}
        </div>
    </div>
    <div class="form-group">
        <label for="dateNumberFilter" class="col-lg-12 control-label">Номер/Дата</label>
        <div class="col-lg-12">
            <input class="form-control" value="{{inputs.dateNumber}}" type="text" id="dateNumberFilter">
        </div>
    </div>
    <div class="form-group">
        <label for="articleTitleFilter" class="col-lg-12 control-label">Название статьи</label>
        <div class="col-lg-12">
            <input class="form-control" value="{{inputs.articleTitle}}" type="text" id="articleTitleFilter">
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12 text-right">
            <button type="submit" class="btn btn-primary btn-find">
                <i class="fas fa-search"></i>
                <span class="spinner spinner-border spinner-border-sm" hidden role="status" aria-hidden="true"></span>
                Найти
            </button>
            <button type="button" class="btn btn-primary btn-clear">Очистить</button>
        </div>
    </div>
</form>