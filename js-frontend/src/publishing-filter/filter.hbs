<form class="form-horizontal" id="form-filter">
    <h4 class="form-title">Поиск журналов</h4>
    <div class="form-group">
        <label for="titlePublication" class="col-lg-12 control-label">{{typePublication}}</label>
        <div class="col-lg-12">
            <select class="form-control" name="titlePublication" id="titlePublication">
                {{#each publicationsTitles}}
                        {{#if_eq this.title '123'}}
                            <option selected data-item="{{this.id}}">{{this.title}}</option>
                        {{else}}
                            <option data-item="{{this.id}}">{{this.title}}</option>
                        {{/if_eq}}
                {{else}}
                    <option value=""> - Не найдено - </option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="dateNumber" class="col-lg-12 control-label">Номер/Дата</label>
        <div class="col-lg-12">
            <input class="form-control" value="{{inputs.dateNumber}}" name="dateNumber" type="text" 
                id="dateNumber" placeholder="Номер/Дата">
        </div>
    </div>
    <div class="form-group">
        <label for="articleTitle" class="col-lg-12 control-label">Название статьи</label>
        <div class="col-lg-12">
            <input class="form-control" value="{{inputs.articleTitle}}" name="articleTitle" type="text" 
                id="articleTitle" placeholder="Название статьи или её часть">
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12 text-right">
            {{#if isSubmitting}}
                <div class="spinner-border text-primary align-middle" role="status"></div>
            {{/if}}
            <button type="submit" class="btn btn-primary"
                {{#if isSubmitting}}
                    disabled="disabled"
                {{/if}}
            >
                <i class="fas fa-search"></i>
                {{#if isSubmitting}}
                    Поиск
                {{else}}
                    Найти
                {{/if}}
            </button>
            <button type="reset" class="btn btn-primary btn-clear">Очистить</button>
        </div>
    </div>
</form>