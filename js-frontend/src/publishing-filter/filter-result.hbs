<h4 class="form-title">Результаты поиска</h4>
{{#if issues}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col" colspan="2">Номер</th>
            </tr>
        </thead>
        <tbody>
            {{#each issues}}
                <tr data-index="{{@index}}">
                    <td>{{this.number}}, {{this.date}}, {{this.subject}}</td>
                    <td class="text-right">
                        <button class="btn btn-primary btn-sm">
                            <i class="fas fa-info-circle"></i>
                        </button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p class="text-center">
        <small>Не найдено</small>
    </p>
{{/if}}