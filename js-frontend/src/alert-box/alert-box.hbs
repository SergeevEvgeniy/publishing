<div class="col-md-6 col-xs-12 alert-container fixed-bottom">
    <div class="zindex-fixed">
        <div class="alert alert-{{variant}} fade show" role="alert">
            {{message}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
</div>