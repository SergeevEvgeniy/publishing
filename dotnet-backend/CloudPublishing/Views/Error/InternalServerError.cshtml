@{
    ViewBag.Title = "Something went wrong";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="error-notification">
    <img src=@Url.Content("~/Content/img/icon-internal-exception.png") class="notification-img">
    <h2>Похоже у нас что-то пошло не так</h2>
    <ul class="notification-list list-unstyled">
        <li class="list-header">Может быть это вам поможет:</li>
        <li class="list-item">
            @Html.ActionLink("Список сотрудников", "List", "Employee")
        </li>
        @if (User.Identity.IsAuthenticated && User.IsInRole("ChiefEditor"))
        {
            <li class="list-item">
                @Html.ActionLink("Добавить сотрудника", "Create", "Employee")
            </li>
            <li class="list-item">
                @Html.ActionLink("Список журналов", "List", "Publishing")
            </li>
            <li class="list-item">
                @Html.ActionLink("Добавить журнал", "Create", "Publishing")
            </li>
        }
        @if (User.Identity.IsAuthenticated && (User.IsInRole("ChiefEditor") || User.IsInRole("Editor")))
        {
            <li class="list-item">
                @Html.ActionLink("Список рецензий", "Index", "Review")
            </li>
            <li class="list-item">
                @Html.ActionLink("Добавить рецензию", "Create", "Review")
            </li>
        }
    </ul>
</div>
